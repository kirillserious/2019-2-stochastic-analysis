function result = cantor_generate()
% Генератор случайных чисел с распределением канторовой лестницей
% ! Погрешность eps = 10^-9 (N = 20)
%
% Input arguments:
%    varargin - scalar cells - размерность случайного тензора
    
    % Алгоритм
    N = 20;
    mul_vector = 1:20;
    mul_vector = 3^(-mul_vector);
    if numel(varargin) == 0
        bern_matrix = bern_generate(0.5, N, 1);
        
        result = sum(bern_matrix);
    else
        if numel(varargin) == 1
            bern_matrix = bern_generate(0.5, varargin{:}, varargin{:}, N);
            dimention = 3;
            result = sum(bern_matrix, 3);
        else
            dimention = numel(varargin) + 1;
            bern_matrix = bern_generate(0.5, varargin{:}, N);
            result = sum(bern_matrix, dimention);
        end
    end
end
